<div class="relative">

<%= link_to job, class: "border rounded-lg py-6 px-12 mb-4 block transition ease-in-out duration-300 hover:shadow-lg" do %>

<% if job.company_logo.attached? %>
  <div class="absolute top-0 left-0 transition duration-300 ease-in-out transform rounded-full w-16 h-16 mt-8 -ml-8" >
  <%= image_tag job.company_logo.variant(resize_to_fit: [200, 200]), class: "w-16 h-16 object-cover border-black rounded-full" %>
</div>

<% end %>
<p><%= job.company_name %>
<% if job.featured? %>
  <span class="bg-yellow-500 rounded-lg text-black uppercase text-xs font-bold tracking-wide px-2 py-px"> Featured</span>
<% end %>
</p>


<h3 class="text-xl font-black"><%= job.title %></h3>

<%= job.compensation_range %>

<p>
<% if job.headquarters? %>
  Location:
  <span class="bg-green-500 rounded-lg text-black uppercase text-xs font-bold tracking-wide px-2 py-px"> <%= job.headquarters %> </span>
<% end %>
<% if job.remote? %>
  <span class="bg-blue-500 rounded-lg text-black uppercase text-xs font-bold tracking-wide px-2 py-px"> Remote</span>
<% end %>
</p>


<p><% if job.years_of_experience? %>
  Experience:
  <span class="bg-purple-500 rounded-lg text-black uppercase text-xs font-bold tracking-wide px-2 py-px"> <%= pluralize(job.years_of_experience, 'year')  %> </span>
<% end %></p>





<% end %>

<% if admin? %>
<div class="absolute top-0 right-0 mt-4 mr-4">
  <%= link_to 'Edit', edit_job_path(job), class: "underline mr-1" %>
  <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "underline mr-1"    %>
  </div>
<% end %>




</div>
